<div class="container">
  <h1>All Instruments</h1>
  <ul>
    <% @instruments.each do |instrument| %>
      <li>
        <%= link_to instrument.product_name, instrument_path(instrument) %>
        <%= image_tag instrument.img_url, width: 100 %>
          <% if  instrument.user != current_user %>
            <% if current_user.favorited?(instrument) %>
              <%= link_to unfavourite_instrument_path(instrument) do %>
                <i class="fa-regular fa-heart"></i>
              <% end %>
            <% else %>
              <%= link_to favourite_instrument_path(instrument) do %>
                <i class="fa-solid fa-heart"></i>
              <% end %>
            <% end %>
          <% end %>
      </li>
    <% end %>
  </ul>
  <hr>
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
