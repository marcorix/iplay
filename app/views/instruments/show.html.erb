<div class="container" data-controller="insert-in-list">
  <h1><%= @instrument.product_name %></h1>
    <% if current_user.instruments.include?(@instrument) %>
      <h2>You own this instrument</h2>
    <% else %>
      <%= simple_form_for [@instrument, @booking] do |f|%>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.submit %>
      <% end %>
      <hr>
      <%= render 'reviews/form', {instrument: @instrument, review: @review} %>
    <% end %>

    <hr>

    <h4>Reviews:</h4>
    <ul data-insert-in-list-target="list">
      <% @reviews.each do |review| %>
        <li><%= render 'reviews/review', review: review %></li>
      <% end %>
    </ul>
</div>
