<div class="container">
  <h1><%= @instrument.product_name %></h1>
    <% if current_user.instruments.include?(@instrument) %>
      <h2>You own this instrument</h2>
    <% else %>
      <%= simple_form_for [@instrument, @booking] do |f|%>
      <%= f.input :start_date, as: :date, html5: true %>
      <%= f.input :end_date, as: :date, html5: true %>
      <%= f.submit %>
      <% end %>
    <% end %>
</div>
