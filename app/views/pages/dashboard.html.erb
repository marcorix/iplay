<h1>My Dashboard</h1>
<ul>
  <% current_user.bookings_as_owner.each do |booking| %>
    <li>
      <div class="booking-card d-flex">
        <p>
          <%= booking.instrument.product_name %>
          <%= booking.start_date.strftime('%A, %b %d') %>
          <%= booking.end_date.strftime('%A, %b %d') %>
        </p>
        <div>
          <% if booking.pending? %>
            <%= render 'booking_request', booking: booking %>
          <% else %>
            <%= booking.status %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
